<h1>New Movie</h1>

<%= form_with(model: @movie, url: movies_path) do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :director %>
    <%= form.text_field :director %>
  </div>

  <%= form.submit "Create Movie" %>
<% end %>

<div>
<h1>Add multiple movies</h1>
</div>

<%= form_with(url: bulk_create_movies_path) do |form| %>
  <div>
    <%= form.file_field :file, accept: ".csv" %>
  </div>
  </div>

  <%= form.submit "Create Movies" %>
<% end %>